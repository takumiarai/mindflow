{
	"name": "Mindflow",
	"description": "An app to help you deeply focus on your work, with the help of a pomodoro timer and a simple to-do list.",
	"version": "0.1",
	"permissions": [
			"notifications",
			"alarms",
			"storage"
    ],
	"manifest_version": 2,

	"background": { "scripts": ["background.js"] },

	"browser_action": {
		"default_title": "Start a timer",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icon16.png",
		"24": "icon24.png",
		"32": "icon32.png"

	}
}
